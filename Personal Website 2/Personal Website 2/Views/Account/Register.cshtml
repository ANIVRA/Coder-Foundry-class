@model Personal_Website_2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="body-offwhite text-center b-m-bottom">@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-2 body-offwhite b-log b-m-bottom">
        <br /><br />
    </div>
    <div class="col-md-6 body-offwhite b-log b-m-bottom">
        <h4>Create a new account :</h4>
    </div>
    <div class="col-md-4 body-offwhite b-log b-m-bottom">
        <br /><br />
    </div>
</div>


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="body-offwhite b-general">
        @Html.AntiForgeryToken()
        <!--  <h4>Create a new account.</h4>  -->
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
