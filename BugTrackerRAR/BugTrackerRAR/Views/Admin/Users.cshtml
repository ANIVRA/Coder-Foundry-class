
@{
    ViewBag.Title = "Users";
}

<h2>@ViewBag.Title.</h2>

<h2>Users</h2>

<div>

    <div class=" ="col-md-12">
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                        <td> @user.FirstName</td>
                        <td> @user.LastName</td>
                        <td> @user.Email</td>
                        <td>
                           @Html.ActionLink("Edit Role", "EditUser", new { id = user.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

