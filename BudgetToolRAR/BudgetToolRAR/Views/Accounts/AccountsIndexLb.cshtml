@model IEnumerable<BudgetToolRAR.Models.Account>

@*@{
        ViewBag.Title = "Log in";
    }*@


<!-- light-blue - v3.1.0 - 2014-12-06 -->

<!DOCTYPE html>
<html>
<head>
    <title>Accounts</title>
</head>
<body class="background-dark">
    <div class="logo">
        <h3>Budget Tool</h3>
    </div>

    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <br />
        </div>
        <div class="col-md-8">
            <a href="@Url.Action("AccountsCreateLb","Accounts")"><span class="name h4 btn btn-primary">Create an Account</span></a>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-4">
            <br />
        </div>
        <div class="col-md-8">

            <div class="page-tables">
                <!-- Table -->
                <div class="table-responsive">
                    <h3>List of Accounts</h3>
                    <table cellpadding="0" cellspacing="0" border="0" id="data-table">
                        <thead>
                            <tr>
                                <th style="width:200px;">Account</th>
                                <th style="width:200px;">Balance</th>
                                <th style="width:200px;">Reconciled</th>
                            </tr>
                        </thead>
                        <tbody>   @* If there are no accounts, will display the heading but will be blank for data, no errors will occur*@
                            @foreach (var item in Model)         
                            {
                                <tr>
                                    <td style="width:200px; overflow:hidden;font-size: 14px;">
                                        @Html.DisplayFor(u => item.Name)
                                    </td>
                                    <td style="width:200px; overflow:hidden;font-size: 14px;">
                                        @Html.DisplayFor(u => item.Balance)
                                    </td>
                                    <td style="width:200px; overflow:hidden;font-size: 14px;">
                                        @*@if (u => item.Balance == Viewbag.Reconcile[item.Id])
                                        {
                                            <p>Reconciled</p>
                                        }
                                        else
                                        {
                                            @Html.Displayfor(Viewbag.Reconcile[item.Id])
                                           }*@
                                    </td>
                                </tr>
                            }
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>
    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>


    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>

    <!-- page specific scripts -->
</body>
</html>
