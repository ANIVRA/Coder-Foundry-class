@model BugtrackerRAR_2.Models.ProjectUsersViewModel

@{
    ViewBag.Title = " Unassign Users from Projects";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="container">
    <br />
    <h2>Listing of Users assigned to a Project, with option to Unassign the User</h2>
    <br />



    @using (Html.BeginForm("UnassignUser", "ProjectUsers", null, FormMethod.Post))
    {
        @Html.HiddenFor(model => model.projectId)
        @Html.DisplayFor(model => model.projectName)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col-md-10">
                    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Unassign selected user(s)" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
<div class="container">
    <div class="row">

        <div class="col-sm-2">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("IndexBp","Projects")" class="black"> Back to List</a>}
            @if (User.IsInRole("Project Manager"))
            {
                <a href="@Url.Action("IndexBp2", "Projects")" class="black"> Back to List</a>}
            <br />
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("MainAdmin","DashBrd")" class="black"> Back to Dashboard</a>}
            @if (User.IsInRole("Project Manager"))
            {
                <a href="@Url.Action("Main", "Home")" class="black"> Back to Dashboard</a>}
            <div class="col-sm-10">

            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
