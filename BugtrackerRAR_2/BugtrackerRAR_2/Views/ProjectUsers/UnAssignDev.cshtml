@model BugtrackerRAR_2.Models.ProjectUsersViewModel

@{
    ViewBag.Title = "Unsssign Project Managers";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="container">
    <br />
    <h2>Unassign Developers</h2>
    <br />



    @using (Html.BeginForm("UnAssignDev", "ProjectUsers", null, FormMethod.Post))
    {
        @Html.HiddenFor(model => model.projectId)
        @Html.DisplayFor(model => model.projectName)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col-md-10">
                    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Unassign" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-1">

        </div>
        <div class="col-sm-2">
            <a href="/Home/Main" class="btn"> Back to Dashboard</a>
        </div>
        <div class="col-sm-9">

        </div>
    </div>
</div>


