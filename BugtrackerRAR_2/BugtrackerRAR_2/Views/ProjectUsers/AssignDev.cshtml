@model BugtrackerRAR_2.Models.ProjectUsersViewModel

@{
    ViewBag.Title = "Assign Project Managers";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="container">
    <br />
    <h2>Assign Developers</h2>
    <br />



    @using (Html.BeginForm("AssignDev", "ProjectUsers", null, FormMethod.Post))
    {
        @Html.HiddenFor(model => model.projectId)
        @Html.DisplayFor(model => model.projectName)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col-md-10">
                    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "form-control" })
                </div>
            </div>
            <input type="hidden" name="calledfrom" value="1" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Assign" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
<div class="container">
    <div class="row">

        
            <div>
                <p>

                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("IndexBp","Projects")" class="btn br-lblue white"> Back to List</a>}


                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("MainAdmin","DashBrd")" class="btn br-blue white"> Back to Dashboard</a>}

                </p>
            </div>
       
    </div>
    <div>

    </div>
</div>
